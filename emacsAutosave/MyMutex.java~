public class MyMutex {
    public static void main(String[] args){
	final MySemaphore sem1 = new MySemaphore();
	final MySemaphore sem2 = new MySemaphore();
	Thread obj1 = new Thread(){
		public void run(){
		    System.out.println("Statement a1");
		    sem1.myWait();
		    sem2.mySignal();
		    System.out.println("Statement a2");
		}
	    };

	Thread obj2 = new Thread(){
		public void run(){
		    System.out.println("Statement b1");
		    sem1.mySignal();
		    sem2.myWait();
		    System.out.println("Statement b2");
		}
	    };

	obj1.start();
	obj2.start();
    }
}