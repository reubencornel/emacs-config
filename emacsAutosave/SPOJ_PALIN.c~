#include<stdio.h>
#include<math.h>

int reverseNumber(int number) {
  int newNumber = 0;
  while(number > 0) {
    newNumber =(newNumber*10) + (number % 10);
    number /= 10;
  }
  return newNumber;
}

int nextPalindrome(int number) {
  int i = number + 1;
  while (i != reverseNumber(i)) {
    i++;
  }
  return i;
}

int main() {
  int numberOfInputs = 0;
  int i = 0;
  int number = 0;
  
  scanf("%d", &numberOfInputs);
  for(i = 0; i < numberOfInputs; i++) {
    scanf("%d", &number);
    printf("%d\n", nextPalindrome(number));
  }
}
